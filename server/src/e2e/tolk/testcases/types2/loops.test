========================================================================
While loop
========================================================================
fun main() {
    var a: int | null;
    while (a != null) {
        a;
//!     ^ int

        a = null;
//!     ^ int?
        a
//!     ^ null
    }
}
------------------------------------------------------------------------
ok

========================================================================
Do while loop
========================================================================
fun main() {
    var a: int | null;
    do {
        a;
//!     ^ int?

        a = null;
//!     ^ int?
        a
//!     ^ null
    } while (a != null);
}
------------------------------------------------------------------------
ok

========================================================================
Repeat loop
========================================================================
fun main() {
    var a: int | null;
    repeat (10) {
        a;
//!     ^ int?
        a = 10;
//!     ^ int?
        a;
//!     ^ int
    }
}
